        "authentication",
        "validation",
        "access-token"
    ],
    "authors":
    [
        {
            "name": "Oleynikov Nikolay",
            "email": "OleynikovNY@mail.ru",
            "homepage": "http://github.com/Kolyunya/"
        }
    ],
    "require-dev":
    {
        "phpunit/phpunit": "3.7.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "autoload":
    {
        "psr-4":
        {
            "kolyunya\\oauth2\\validation\\": "sources",
            "kolyunya\\oauth2\\validation\\tests\\": "tests"
        }
    }
